/* pages/user/profile.wxss */
.container {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.head-img {
  border: solid #dedede 1rpx;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
}

.camera {
  width: 60rpx;
  height: 60rpx;
  z-index: 1;
  margin-top: -50rpx;
  margin-left: 100rpx;
}

.tip {
  color: #5a5a5a;
  text-align: center;
  margin-top: 10rpx;
  font-size: small;
}

.list {
  margin-top: 60rpx;
}

.title {
  margin-left: 5rpx;
  margin-right: 40rpx;
  color: #5a5a5a;
  display: block;
}

.list-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.input {
  width: 450rpx;
}

.wechat-num {
  color: #5a5a5a;
  font-weight: 600;
}

.right-text {
  display: block;
  font-size: smaller;
  color: #5a5a5a;
}

view .van-cell-group--inset {
  border-radius: 24rpx;
  box-shadow: 0px 11px 34px rgba(158, 158, 158, 0.1),
    0px 5.9437px 18.4156px rgba(153, 153, 153, 0.075),
    0px 4.2px 51.775px rgba(156, 156, 156, 0.05),
    0px 3.10625px 7.74687px rgba(151, 151, 151, 0.075);
}

.upbody {
  background-color: #ffffff;
  border-radius: 24rpx;
  margin: 30rpx 16px 0 16px;
  padding: 30rpx 0;
  box-shadow: 0px 11px 34px rgba(158, 158, 158, 0.1),
    0px 5.9437px 18.4156px rgba(153, 153, 153, 0.075),
    0px 4.2px 51.775px rgba(156, 156, 156, 0.05),
    0px 3.10625px 7.74687px rgba(151, 151, 151, 0.075);
}

.icon {
  height: 35rpx;
  width: 35rpx;
  align-self: center;
  margin-right: 30rpx;
}

.pop .container {
  width: 100%;
  display: flex;
  flex: 1;
  flex-direction: row;
  margin: 100rpx auto 0;
}

.pop .button {
  margin-top: 100rpx;
}

.pop .input {
  margin-left: 30rpx;
}

.pop .tip {
  font-size: small;
  color: rgb(247, 109, 109);
}