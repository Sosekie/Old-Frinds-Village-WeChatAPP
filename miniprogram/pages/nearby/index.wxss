/* pages/nearby/index.wxss */
.map {
  width: 100%;
  height: 1325rpx;
}

.near_out {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100vh;
  overflow: hidden;
}

.back_img image {
  width: 100vw;
  height: 102vh;
  overflow: hidden;
  margin: 0vw 0 0vw 0vw;
  border-radius: 0;
  position: absolute;
  z-index: 999;
  display: block;
}

.locate {
  position: absolute;
  bottom: 20%;
  right: 5%;
  z-index: 50;
}

.locate .img {
  width: 50rpx;
  height: 50rpx;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 50%;
  z-index: 50;

}

.view-swiper {
  position: absolute;
  bottom: 2%;
  z-index: 1;
  width: 750rpx;
}

.swiper {
  height: 300rpx;
}

.card {
  width: 97%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 24rpx;
  position: absolute;
  bottom: 2%;
  left: 1.5%;
  z-index: 1;
}

.img {
  width: 170rpx;
  height: 170rpx;
  border-radius: 8%;
  margin-top: 15rpx;
  margin-left: 15rpx;
}

.place-name {
  margin-top: 23rpx;
  font-weight: 600;
}

.comment {
  margin-right: 15rpx;
  margin-top: 5rpx;
}

.bottom {
  margin-top: 10rpx;
  margin-right: 15rpx;
  margin-left: -2rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.detail {
  color: #616161;
  font-size: 25rpx;
  height: 75rpx;
  display: block;
}

.like-icon {
  width: 30rpx;
  height: 30rpx;
}

.like-num {
  font-size: 25rpx;
  vertical-align: 7rpx;
  margin-left: 7rpx;
}

.distance {
  margin-right: 12rpx;
}

.distance-icon {
  width: 30rpx;
  height: 28rpx;
  vertical-align: 4rpx;
}

.distance-num {
  font-size: 25rpx;
  vertical-align: 7rpx;
  margin-left: 7rpx;
}

.option-card {
  width: 100%;
  height: 80rpx;
  background-image: url('cloud://cloud1-0g3t249cf8fbcd65.636c-cloud1-0g3t249cf8fbcd65-1312169160/beauti_pic/select.jpg');
  border-radius: 0 0 1vw 1vw;
  position: absolute;
  top: 0%;
  z-index: 5;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.option {
  font-size: 27rpx;
  background-color: #fff;
  padding: 20rpx 45rpx;
  margin-top: 20rpx;
  border-radius: 1vw;
  color: #5e5e5e;
}

.option-sel {
  font-size: 27rpx;
  background-color: #97d297;
  margin-top: 20rpx;
  padding: 20rpx 180rpx;
  border-radius: 1vw;
  font-weight: 600;
}



image {
  width: 6vw;
  border-radius: 50%;
}

.card-item-poster image {
  width: 60vw;
  margin: 3.3vw;
  height: 60vw;
  border-radius: 4vw 4vw;
  box-shadow: 0px 11px 34px rgba(94, 84, 152, 0.1),
    0px 5.9437px 18.4156px rgba(94, 84, 152, 0.075),
    0px 4.2px 51.775px rgba(94, 84, 152, 0.05),
    0px 3.10625px 7.74687px rgba(94, 84, 152, 0.075);
}

.info-cont {
  padding: 0 3.3vw;
}

.info-cont-title {
  font-size: 4vw;
  font-weight: 900;
  line-height: 4vw;
  /* margin-bottom: 3.3vw; */
  color: black;
  padding: 0.5vw 1vw;
  border-radius: 2vw;
  width: auto;
}

.img-left {
  height: 60vw;
  display: flex;
  margin-left: 30rpx;
  margin-top: 30rpx;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  font-size: 4vw;
  color: #000;
}

.img-left .block {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 3.3vw;
}

.img-left .block .location-icon {
  height: 40rpx;
  width: 50rpx;
}

.img-left .block .head-img {
  height: 50rpx;
  width: 50rpx;
}

.img-left .block .message {
  font-size: 3.5vw;
  color: #555;
  margin-left: 10rpx;
  /* vertical-align: -5rpx; */
  font-size: 4vw;
  color: #000;
}

.img-left .block .message-poi {
  font-size: 3.5vw;
  color: #555;
  margin-left: 10rpx;
  width: 170rpx;
  /* vertical-align: -5rpx; */
  font-size: 4vw;
  color: #000;
}


.content-wrapper {
  height: auto;
  overflow: hidden;
  transition: 300ms all cubic-bezier(0, 1, 0.85, 1.05);
}

.content-wrapper .content {
  padding: 3.3vw;
  overflow: auto;
}

.content .position,
.music,
.shopping {
  display: flex;
  justify-content: flex-start;
  align-content: center;
  margin: 0 0 2vw 0;
  align-items: center;
}

.content .position image {
  width: 6vw;
  border-radius: 0vw;
  margin: 0 2vw 0 0;
}

.content .music image {
  width: 8vw;
  border-radius: 0vw;
  margin: 0 2vw 0 0;
}

.content .shopping image {
  width: 8vw;
  border-radius: 2vw;
  margin: 0 2vw 0 0;
}

.content .shopping .shopping_discription_tent {
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.position_discription,
.music_discription,
.shopping_discription_tent {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.music {
  padding: 1vw;
  background-color: #fafafa;

  border-radius: 1vw;
}

.shopping {
  padding: 1vw;
  background-color: #fafafa;
  border-radius: 1vw;
}

.discription {
  color: #555;
  font-size: 4vw;
  margin-top: 3.3vw;
}

.date {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-content: center;
  color: #555;
  font-size: 3vw;
  text-align: right;
}

.navigate {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}



.showmore {
  font-size: 4vw;
  color: #555;
  display: block;
  padding: 3.3vw 0;
  width: 93.4vw;
  background-color: #A68B57ee;
  color: #fff;
  border-radius: 2vw;
  text-align: center;
  position: absolute;
  bottom: 2vh;
}

