/* pages/up/index.wxss */
.out_up {
  width: 100%;
  overflow-x: hidden;
}

page {
  background-color: #f3f3f3;
}

.fun-list-sec {
  margin-top: 3vw;
}

.xiahua {
  font-size: 5vw;
  font-family: Youyuan;
  font-weight: 900;
  color: #fff;
  text-align: center;
  padding: 1vw 3.3vw;
  color: #a68a58;
  background-color: #fff;
  box-shadow: 0 11px 34px rgba(94, 84, 152, .2), 0 5.9437px 18.4156px rgba(94, 84, 152, .175), 0 4.2px 51.775px rgba(94, 84, 152, .1), 0 3.10625px 7.74687px rgba(94, 84, 152, .125);
  border-radius: 2vw;
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 92vh 3.3vw 3.3vw 3.3vw;
}

.back_img image {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  /* margin: -4vw 0 0vw -4vw; */
  border-radius: 0;
  position: fixed;
  z-index: -1;
  display: block;
  opacity: 0.8;
}

.up-body {
  background: #ffffff;
  margin: 0 3.3vw;
  border-radius: 3.3vw;
  margin-top: 3.3vw;
  background-color: #fffc;
}

.view-button {
  margin: 0;
}

.but-back {
  margin: 3.3vw;
}

.dividing-line-title {
  width: 150%;
  background-color: rgb(228, 228, 228);
  height: 1rpx;
  margin: 0 0vw 5vw -3.3vw;
}

.iamgeRootAll {
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}


.imgItem {
  margin: 0 0 3.3vw 0;
  position: relative;
  width: 176rpx;
  height: 176rpx;
  background: gainsboro;
  border-radius: 2vw;
}

.img {
  width: 100%;
  height: 100%;
}

.closeImg {
  position: absolute;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
}

.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}

.view-button {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 20rpx;
  margin-top: 12rpx;
}

view .van-button {
  border-radius: 15rpx;
}

.upload {
  margin: 3.3vw;
}

.textarea {
  height: 250rpx;
}

.view-img-upload {
  padding-bottom: 12rpx;
}

.card {
  margin: 3.3vw 3.3vw 0 3.3vw;
  /* width: 100%; */
  height: 100rpx;
  /* padding: 0 3%; */
  border-radius: 3.3vw;
  /*  阴影 */
  /*box-shadow: 0 0 15rpx rgba(61, 61, 61, 0.5);*/
  display: flex;
  align-items: center;
  background-color: #fffc;
}

.icon {
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin-left: 40rpx;
}

.song-name {
  margin-left: 40rpx;
  font-size: 27rpx;
  width: 50%;
  color: #5a5a5a;
  font-weight: 700;
}

.control {
  display: flex;
  flex-direction: row;
  justify-content: center;
  opacity: 0.5;
  align-items: center;
}

.arrow {
  width: 50rpx;
  height: 50rpx;
}

.play {
  width: 60rpx;
  height: 60rpx;
}

.product-img {
  margin-left: 40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 15rpx;
}

.view-product-description {
  margin-left: 40rpx;
}

.view-product-description .input {
  width: 500rpx;
  font-size: 27rpx;
  color: #5a5a5a;
}

.input-placeholder {
  font-size: 27rpx;
}

.fun-list {
  background-color: #fffc;
  border-radius: 3.3vw;
  /* width: 100%; */
  margin: 3.3vw 3.3vw 3.3vw 3.3vw;
}

.location,
.product {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 27rpx 0;
}

.location .icon {
  width: 35rpx;
  height: 35rpx;
}

.product .icon {
  width: 37rpx;
  height: 37rpx;
}

.location .text {
  margin-left: 30rpx;
  width: 76%;
}

.location .text-green {
  margin-left: 30rpx;
  width: 76%;
  color: #04BE02;
}

.product .text {
  margin-left: 28rpx;
  width: 76%;
}

.product .text-blue {
  margin-left: 28rpx;
  width: 76%;
  color: #2797ff;
}

.location .arrow,
.product .arrow {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.45;
}

.dividing-line {
  width: 85%;
  background-color: rgb(228, 228, 228);
  height: 1rpx;
  margin: auto;
}

.hover-location {
  background-color: rgb(228, 228, 228);
  border-radius: 24rpx 24rpx 0 0;
}

.hover-product {
  background-color: rgb(228, 228, 228);
  border-radius: 0 0 24rpx 24rpx;
}

.match-music .van-cell {
  background-color: #ffffffcc !important;
  border-radius: 3vw;
  width: 93.4vw;
  margin: 0 3.3vw;
}

.match-situation .van-cell {
  background-color: #ffffff !important;
  border-radius: 0 0 24rpx 24rpx;
  width: 90%;
  margin: auto;
}

.match-situation-zhankai .van-cell {
  background-color: #ffffff !important;
  border-radius: 0;
  width: 90%;
  margin: auto;
}



.match-music .van-collapse-item__content {
  border-radius: 3.3vw;
  background-color: #ffffffaa !important;
  /* margin: 0 3.3vw; */
}

.van-collapse-item__content {
  border-radius: 0;
  background-color: #ffffffaa !important;
  margin: 0 3.3vw;
}

.match-situation .van-collapse-item__content {
  border-radius: 0 0 24rpx 24rpx;
  background-color: #ffffff !important;
  margin-left: 5%;
  margin-right: 5%;
}

.item-index--van-cell {
  margin: 0;
}

.match-situation-zhankai .van-collapse-item__content {
  border-radius: 0 0 24rpx 24rpx;
  background-color: #ffffff !important;
  margin-left: 5%;
  margin-right: 5%;
}

.match-music {
  margin: 0 0 3.3vw 0;
}

.match-music .icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 11rpx;
}

.match-music-text {
  margin-left: 26rpx;
}

.emotion,
.songs {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-self: start;
  margin: 0rpx 0 20rpx 0;
}

.emotion .img,
.songs .img {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
  margin-left: 12.5rpx;
}

.emotion .tag_box {
  color: #A68B57;
  padding: 1vw 2vw;
  margin: 0 10rpx;
  border-radius: 1vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.emotion .tag {
  background-color: #A68B57;
  color: #fff;
  padding: 1vw 2vw;
  margin: 0 10rpx;
  border-radius: 1vw;
}

.songs .container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex: 1;
}

.songs .tag {
  background-color: #fffc;
  padding: 1vw 3vw;
  margin: 10rpx;
  border-radius: 7rpx;
  color: #A68B57;
  display: flex;
}

.music_name {
  margin-right: 2vw;
}

.music_emo {
  background-color: #A68B57cc;
  color: #fff;
  padding: 0 2vw;
  border-radius: 1vw;
}

.songs .tag-sel {
  background-color: #A68B57cc;
  color: #ffffff;
  padding: 2vw 5vw;
  margin: 10rpx;
  border-radius: 7rpx;
  display: flex;
}

.songs .tag-sel .music_name {
  margin-right: 4vw;
}

.songs .tag-sel .music_emo {
  background-color: #fff;
  color: #A68B57;
  padding: 0 2vw;
  border-radius: 1vw;
}

.songs_loss {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.van-collapse-item__wrapper {
  /* margin: 0 3.3vw; */
  width: 100vw;
}

view .van-cell--large {
  padding-bottom: 26rpx;
  padding-top: 26rpx;
}

view .van-icon-audio {
  margin-left: 12rpx !important;
  font-size: 34rpx;
}

view .van-icon-bars {
  margin-left: 12rpx !important;
  font-size: 35rpx;
}

view .van-icon-arrow {
  top: 6rpx
}

.dividing-line-container {
  background-color: #fff;
  display: flex;
  width: 78%;
  margin: auto;
}

.dividing-line-container .dividing-line {
  width: 100%;
  background-color: rgb(228, 228, 228);
  height: 1rpx;
  z-index: 1;
}