.flex-row {
  display: flex;
  flex-direction: row;
  justify-content: center
}

.flex-col {
  display: flex;
  flex-direction: column;
  justify-content: center
}

image {
  width: 6vw;
  border-radius: 50%
}

.loading {
  position: relative;
  bottom: 5rpx;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 0 20vw;
  font-size: 4vw;
  border-radius: 1vw;
  color: #aaa;
  box-shadow: 0 11px 34px rgba(94, 84, 152, .2), 0 5.9437px 18.4156px rgba(94, 84, 152, .175), 0 4.2px 51.775px rgba(94, 84, 152, .1), 0 3.10625px 7.74687px rgba(94, 84, 152, .125);
}

.nav {
  position: fixed;
  top: 0%;
  z-index: 999;
  width: 102vw;
  left: -2vw;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  font-size: 4vw;
  font-family: Youyuan;
  font-weight: 900;
  color: #a68b57;
  text-align: center;
  /* margin: 0 0 3.3vw 0; */
  box-shadow: 0 11px 34px rgba(94, 84, 152, .2), 0 5.9437px 18.4156px rgba(94, 84, 152, .175), 0 4.2px 51.775px rgba(94, 84, 152, .1), 0 3.10625px 7.74687px rgba(94, 84, 152, .125);
  border-radius: 0 0 0.5vw 0.5vw;
  overflow: hidden;
}

.nav .button-1 {
  width: 51vw;
  padding: 2vw 0;
  background-color: #fff;
}

.nav .button-2 {
  width: 51vw;
  padding: 2vw 0;
  background-color: #fff;
}

.index {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: center;
  padding: 2vw;
  /* background: url(../../images/pic/back.jpg) no-repeat;
  background-size: cover; */
}

.back_img image {
  width: 100vw;
  height: 80vh;
  margin: 4vw 0 -6vw -2vw;
  border-radius: 0;
}

.zhuye_out {
  display: flex;
  flex-direction: column;
}

.zhuye_img {
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 10vw 0 0 0;
}

.zhuye_img image {
  width: 100%;
  border-radius: 0;
}

.zhuye {
  margin-top: 4vw;
  display: flex;
  justify-content: space-between;
  align-content: center
}

.rank {
  margin-top: 4vw;
}

.card-item {
  width: 47vw;
  background-color: #fff;
  margin: 0 0 2vw 0;
  border-radius: 1vw;
  /* box-shadow: 0 11px 34px rgba(94, 84, 152, .2), 0 5.9437px 18.4156px rgba(94, 84, 152, .175), 0 4.2px 51.775px rgba(94, 84, 152, .1), 0 3.10625px 7.74687px rgba(94, 84, 152, .125) */
}

.card-item-poster image {
  width: 47vw;
  height: auto;
  border-radius: 1vw;
  box-shadow: 0 11px 34px rgba(94, 84, 152, .1), 0 5.9437px 18.4156px rgba(94, 84, 152, .075), 0 4.2px 51.775px rgba(94, 84, 152, .05), 0 3.10625px 7.74687px rgba(94, 84, 152, .075)
}

.info-cont {
  padding: 1.5vw
}

.card-item .info-cont-title {
  font-size: 4vw;
  font-weight: 900;
  line-height: 5vw;
  margin-bottom: 1.5vw;
  color: #000;
  padding: .5vw 1vw;
  border-radius: 2vw;
  width: auto
}

.info-cont-user {
  height: 5vw;
  display: flex;
  justify-content: space-between;
  align-content: center
}

.info-cont-user .left {
  display: flex;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
}

.info-cont-user .left image {
  width: 6vw;
  height: 6vw
}

.info-cont-user .right {
  display: flex;
  justify-content: flex-end;
  align-content: center;
  color: #999;
  font-size: 4vw;
  text-align: center;
}

.info-cont-user .right image {
  margin: -1vw 1vw 1vw 0vw;
}

.info-cont-name {
  font-size: 4vw;
  color: #9b9b9b;
  margin: 0 1.5vw;
  align-items: center;
  text-align: center;
}

.card-item .content-wrapper {
  height: 0;
  overflow: hidden;
  transition: .3s all cubic-bezier(0, 1, .85, 1.05)
}

.card-item:hover .content-wrapper {
  height: 14vh;
  text-overflow: ellipsis;
  overflow: hidden
}

.content-wrapper .content {
  padding: 1vw;
  width: 43vw;
  overflow: hidden;
  background-color: #fff;
}

.content .position,
.music,
.shopping {
  display: flex;
  justify-content: flex-start;
  align-content: center;
  margin: 0 0 2vw 0;
  color: #777;
  height: 5vw;
  font-size: 4vw;
}

.content .position image {
  width: 4vw;
  border-radius: 0;
  margin: 0 2vw 0 0
}

.content .music image {
  width: 4vw;
  border-radius: 0;
  margin: 0 2vw 0 0
}

.content-wrapper .content .shopping image {
  border-radius: 1vw;
  width: 4vw;
  margin: 0 1vw 0 0;
}

.content .open {
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 0 0 2vw 0;
  color: #999
}

.position_discription,
.music_discription,
.shopping_discription_tent {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}

.shopping {
  padding: 1vw;
  background-color: hsla(0, 0%, 60.8%, .13);
  border-radius: 1vw
}

.discription {
  color: #999
}

.card {
  margin: 0 0 2vw 0;
  border-radius: 2vw;
  /* box-shadow: 0 11px 34px rgba(94, 84, 152, .2), 0 5.9437px 18.4156px rgba(94, 84, 152, .175), 0 4.2px 51.775px rgba(94, 84, 152, .1), 0 3.10625px 7.74687px rgba(94, 84, 152, .125); */
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-content: center;
  background-color: #fff;
}

.card navigator {
  display: flex;
  justify-content: space-between;
  align-content: center
}

.card .pic {
  width: 30vw;
  height: 30vw;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-content: center;
  background-color: transparent;
  box-shadow: 0 11px 34px rgba(94, 84, 152, .1), 0 5.9437px 18.4156px rgba(94, 84, 152, .075), 0 4.2px 51.775px rgba(94, 84, 152, .05), 0 3.10625px 7.74687px rgba(94, 84, 152, .075);
  border-radius: 2vw
}

.card .pic ._img {
  width: 30vw;
  height: 30vw;
  object-fit: cover;
  border-radius: 1vw
}

.content {
  width: 60vw;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
}

.content .title {
  font-size: 4vw;
  font-weight: 900;
  line-height: 4vw;
  color: #000;
  padding: 1vw 0;
  width: 50vw;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin: 1vw 0 2vw 0;
}

.content .tent {
  width: 55vw;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}

.content .preview {
  height: 5vw;
  font-size: 4vw;
  font-weight: 500;
  line-height: 4vw;
  color: #999;
  padding: 1vw 0;
  width: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: flex-start
}

.content .zan {
  height: 5vw;
  font-size: 4vw;
  font-weight: 500;
  line-height: 4vw;
  color: #666;
  margin: 1vw;
  padding: 1vw 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-content: flex-end
}

.content .preview image {
  width: 5vw;
  margin: 0 1vw 0 0;
}

.content .zan image {
  width: 5vw;
  margin: 0 2vw 0 -1vw;
}

.user {
  display: flex;
  justify-content: space-between;
  align-content: center
}

.user .left {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center
}

.user .left image {
  width: 5vw;
  height: 5vw;
  border-radius: 3vw;
  margin-right: 2vw
}

.user .left .name {
  font-size: 3vw;
  font-weight: 500;
  line-height: 5vw;
  color: #666;
  text-align: center
}

.user .right {
  display: flex;
  justify-content: flex-end;
  align-content: center;
  font-size: 3vw;
  font-weight: 500;
  line-height: 5vw;
  color: #aaa;
  text-align: center;
  padding: 0 3.3vw 0 0
}